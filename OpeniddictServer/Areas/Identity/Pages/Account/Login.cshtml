@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    // 根据ActiveForm的值，设置CSS类
    var signupClass = ""; // Model.ActiveForm == "signup" ? "" : "slide-up";
    var loginClass = ""; // Model.ActiveForm == "login" ? "" : "slide-up";
}
<div class="row">
    <div class="col-md-4">
        <section class="form-structor">

            <form id="registerForm" class="signup @signupClass" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-page-handler="Register">
                <h2 class="form-title" id="signup"><span>or</span>Sign up</h2>
                <div class="form-holder">
                    <div class="form-floating">
                        <input asp-for="RegisterInput.Email" class="input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="RegisterInput.Password" class="input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="RegisterInput.ConfirmPassword" class="input" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                        <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="submit-btn">Sign up</button>
            </form>

            <form id="account" class="login @loginClass" method="post" asp-route-returnUrl="@Model.ReturnUrl" asp-page-handler="Login">
                <div class="center">
                    <h2 class="form-title" id="login"><span>or</span>Log in</h2>
                    <div class="form-holder">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="input" placeholder="email" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="input" placeholder="password" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input fs-6" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="submit-btn">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </div>
            </form>

            @if (!Model.ModelState.IsValid)
            {
                <div class="toast-container position-fixed top-0 end-0 p-3">
                    <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <img src="..." class="rounded me-2" alt="...">
                            <strong class="me-auto">Bootstrap</strong>
                            <small>11 mins ago</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            <div asp-validation-summary="ModelOnly" role="alert"></div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to log in.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                }
                else
                {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                                </p>
                            </div>
                        </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
        const activeForm = '@Model.ActiveForm';
        document.addEventListener("DOMContentLoaded", function () {
            const slideUpClassName = "slide-up";
            const loginBtn = document.getElementById('login');
            const signupBtn = document.getElementById('signup');

            const loginForm = loginBtn.parentNode.parentNode;
            const signupForm = signupBtn.parentNode;
           
            function toggleForm(isSignUp) {
                if(isSignUp){
                    if (signupForm.classList.contains(slideUpClassName)) {
                        signupForm.classList.remove(slideUpClassName);
                    }
                    if (!loginForm.classList.contains(slideUpClassName)) {
                        loginForm.classList.add(slideUpClassName);
                    }
                }else{
                    if (!signupForm.classList.contains(slideUpClassName)) {
                        signupForm.classList.add(slideUpClassName);
                    }
                    if (loginForm.classList.contains(slideUpClassName)) {
                        loginForm.classList.remove(slideUpClassName);
                    }
                }
            }

            toggleForm(activeForm === "signup");

            loginBtn.addEventListener('click', (e) => toggleForm(false));

            signupBtn.addEventListener('click', (e) => toggleForm(true));
        });

    </script>
}

